{
  "name": "core-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "concurrently -n core-cron,core-api -c red,blue \"yarn start --watch core-cron\" \"yarn start --watch core-api\"",
    "start:prod": "concurrently -n core-cron,core-api \"yarn start:prod:cron\" \"yarn start:prod:api\"",
    "start:prod:api": "node dist/apps/core-api/main",
    "start:prod:cron": "node dist/apps/core-cron/main",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "typeorm": "ts-node --project tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:datasource": "yarn typeorm -d libs/database/src/datasources/migration.datasource.ts",
    "migration:create": "ts-node libs/database/src/scripts/migration-create.script.ts",
    "migration:generate": "ts-node libs/database/src/scripts/migration-generate.script.ts",
    "migration:run": "yarn typeorm:datasource migration:run",
    "migration:revert": "yarn typeorm:datasource migration:revert",
    "migration:lint": "eslint \"libs/database/src/migrations/*.ts\" --fix",
    "test:unit": "jest --coverage --config ./libs/testing/src/config/jest-unit.config.ts",
    "test:e2e": "jest --coverage --config ./libs/testing/src/config/jest-e2e.config.ts"
  },
  "dependencies": {
    "@nestjs/axios": "^3.1.3",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/typeorm": "^10.0.2",
    "axios": "^1.7.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "joi": "^17.13.3",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/pg": "^8",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "webpack": "^5.97.1"
  },
  "packageManager": "yarn@4.6.0"
}
